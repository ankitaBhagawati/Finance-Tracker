
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <style>
        body {
            background-color: #eaf1fb;
        }
        .card {
            border: none;
            border-radius: 16px;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            background-color: #f8f9fa;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        }

        .card-title {
            font-weight: 600;
            color: #333;
        }

        .card-text {
            font-size: 1.5rem;
            font-weight: bold;
            color: #007bff;
        }

        .btn-light {
            background-color: #ffffff;
            border: 1px solid #dee2e6;
            border-radius: 50%;
            padding: 0.3rem 0.5rem;
            font-size: 1rem;
        }

        .btn-light:hover {
            background-color: #e9ecef;
            cursor: pointer;
        }

        .modal-title {
            font-weight: 600;
        }

        #budgetAmount {
            font-size: 1.2rem;
            padding: 0.5rem;
        }
        </style>

<div class="container mt-4">
    <h2 class="mb-4 text-center">Power Your Month with a Solid Plan!</h2>
        <div class="row" id="budgetCardsContainer"></div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="budgetModal" tabindex="-1" aria-labelledby="budgetModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <form id="budgetForm" class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="budgetModalLabel">Enter your budget</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                <input type="number" step="0.01" class="form-control" id="budgetAmount" required>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save Budget</button>
                </div>
            </form>
        </div>
    </div>


<div id="budgetCardsContainer" class="row"></div>
<div id="budgetChartsContainer" style="text-align:center; margin-top: 20px;"></div>



